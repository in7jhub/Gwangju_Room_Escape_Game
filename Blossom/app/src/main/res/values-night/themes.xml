<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Blossom" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#ed8db5</item>
        <item name="colorPrimaryVariant">#ed8db5</item>
        <item name="colorOnPrimary">#ed8db5</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#ed8db5</item>
        <item name="colorSecondaryVariant">#ed8db5</item>
        <item name="colorOnSecondary">#ed8db5</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:colorEdgeEffect">#ed8db5</item>
        <item name="android:actionOverflowButtonStyle">@style/customoverflow</item>
        <item name="actionOverflowButtonStyle">@style/customoverflow</item>
    </style>
    <style name="customoverflow" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:src">@drawable/ic_launcher</item>
        <item name="android:overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">14dp</item>
    </style>
</resources>