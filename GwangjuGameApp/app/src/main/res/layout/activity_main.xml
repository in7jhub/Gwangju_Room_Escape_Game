<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="Deprecated">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_nest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="63dp"
        android:layout_marginBottom="0dp"
        android:scrollbarSize="5dp"
        android:scrollbars="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbVertical="@drawable/custom_scroll_style"
        android:overScrollHeader="#000000"
        android:overScrollFooter="#F6B5D1">
        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2000dp"
            android:text="Button" />
    </androidx.core.widget.NestedScrollView>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ed8db5"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="57dp"
                android:layout_height="54dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/transparent"
                android:enabled="false"
                android:scaleType="center"
                android:src="@drawable/left_button_states"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ImageButton>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="56dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/transparent"
                android:enabled="false"
                android:scaleType="center"
                android:src="@drawable/right_button_states"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ImageButton>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/blossomDiamond"
        android:layout_width="100dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="26dp"
        android:src="@drawable/blossomdiamond"/>

    <TextView
        android:id="@+id/blossom_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="18dp"
        android:text="1"
        android:textColor="#ed32a5"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/diamond_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="99dp"
        android:text="B"
        android:textColor="#ed32a5"
        android:textSize="22sp"/>

    <!-- 제목 activity_main.class에서 바뀌는 것 -->
    <TextView
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="14dp"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:textSize="29sp"/>

    <!--상시 버튼-->
    <ImageButton
        android:id="@+id/answer_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="66dp"
        android:layout_marginRight="40dp"
        android:background="@android:color/transparent"
        android:scaleType="fitStart"
        android:src="@drawable/answer_button_states"
        ></ImageButton>

    <!--진행도 표시-->
    <TextView
        android:id="@+id/progress"
        android:layout_width="120dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="50dp"
        android:gravity="center_horizontal"
        android:textSize="20sp">
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>